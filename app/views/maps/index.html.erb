<div class="flex column center-align">
  <h1>Maps</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Desciption</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @map_memberships.each do |membership| %>
        <% map = membership.map %>
        <tr>
          <td><%= map.name %></td>
          <td><%= map.description %></td>
          <td><%= link_to 'Show', map %></td>
          <td><%= link_to 'Edit', edit_map_path(map) if membership.role == "admin" %></td>
          <td><%=
          link_to 'Destroy', map,
            method: :delete,
            data: {
            confirm: 'Are you sure?'
          } if membership.role == "admin"
          %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Map', new_map_path %>
</div>
