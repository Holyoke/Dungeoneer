<div class="flex column center-align">
  <h1>Projects</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Desciption</th>
        <th>License</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @project_memberships.each do |membership| %>
        <% project = membership.project %>
        <tr>
          <td><%= project.name %></td>
          <td><%= project.description %></td>
          <td><%= project.license %></td>
          <td><%= link_to 'Show', project %></td>
          <td><%= link_to 'Edit', edit_project_path(project) if membership.role == "admin" %></td>
          <td><%= 
          link_to 'Destroy', project,
            method: :delete,
            data: {
            confirm: 'Are you sure?'
          } if membership.role == "admin"
          %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'New Project', new_project_path %>
</div>
