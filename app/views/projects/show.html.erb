<div class="flex row padded-children">
  <div class="flex column padded-children">
    <div class="project-info">
      <p>
      <strong>Name:</strong>
      <%= @project.name %>
      </p>

      <p>
      <strong>License:</strong>
      <%= @project.license %>
      </p>
      <p>
      <strong>Description:</strong>
      <%= @project.description %>
      </p>

      <%= link_to 'Edit', edit_project_path(@project) %>
    </div>

    <div class="padded-children">
      <strong> Invite Administrator </strong>
      <%= form_for @invite , :url => invites_path do |f| %>
        <%= f.hidden_field :project_id, value: @project.id %>
        <%= f.hidden_field :role, value: "admin"%>
        <div class="form-fields">
          <%= f.email_field :email, placeholder: 'example@email.com' %>
        </div>
        <br>

        <div class="footer">
          <%= f.submit 'Send', class: "button" %>
        </div>
      <% end %>
    </div>

    <div class="padded-children">
      <strong> Invite Collaborator</strong>
      <%= form_for @invite , :url => invites_path do |f| %>
        <%= f.hidden_field :project_id, value: @project.id %>
        <%= f.hidden_field :role %>
        <div class="form-fields">
          <%= f.email_field :email, placeholder: 'example@email.com' %>
        </div>
        <br>

        <div class="footer">
          <%= f.submit 'Send', class: "button" %>
        </div>
      <% end %>
    </div>
  </div>
  <div>
    <%= render '/areas/index' %>
  </div>
</div>

