<p id="notice"><%= notice %></p>

<h1>Areas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project.areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <td>
          <p>
            <%= image_tag area.floor_plan.thumb.url %>
          </p>
        </td>

        <td><%= link_to 'Show', area_path(area) %></td>
        <td><%= link_to 'Edit', edit_area_path(area) %></td>
        <td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Destroy area?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Area', new_area_path(nil, { area: { project_id: @project.id}}) %>
